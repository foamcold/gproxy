# 环境配置示例
# 复制此文件为 .env 并填写实际值

# 应用配置
PROJECT_NAME="Gproxy"
API_V1_STR="/api/v1"
VERSION="1.0.0"

# 安全配置
# ⚠️ 重要: 在生产环境中必须修改为安全的随机密钥!
SECRET_KEY="your-super-secret-key-change-it-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8天

# 数据库配置
# SQLite (默认)
DATABASE_URL="sqlite+aiosqlite:///./data/sql_app.db"

# 或使用 PostgreSQL
# DATABASE_URL="postgresql+asyncpg://user:pass@localhost/dbname"

# 或使用 MySQL
# DATABASE_URL="mysql+aiomysql://user:pass@localhost/dbname"

# 初始管理员账户
FIRST_SUPERUSER="admin"
FIRST_SUPERUSER_PASSWORD="admin"  # ⚠️ 生产环境请立即修改!
FIRST_SUPERUSER_EMAIL="admin@example.com"

# Gemini API 配置
GEMINI_BASE_URL="https://generativelanguage.googleapis.com"

# 服务器配置 (可选)
# HOST="0.0.0.0"
# PORT=8000

# CORS 配置 (可选)
# BACKEND_CORS_ORIGINS='["http://localhost:5173", "http://localhost:3000"]'
